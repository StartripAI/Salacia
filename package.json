{
  "name": "salacia",
  "version": "0.1.2",
  "description": "The runtime that makes any AI coding agent smarter, faster, and cheaper",
  "type": "module",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/StartripAI/Salacia.git"
  },
  "homepage": "https://github.com/StartripAI/Salacia",
  "bugs": {
    "url": "https://github.com/StartripAI/Salacia/issues"
  },
  "keywords": [
    "ai",
    "coding-agent",
    "runtime",
    "fault-localization",
    "swe-bench",
    "agentic",
    "developer-tools",
    "llm"
  ],
  "bin": {
    "salacia": "dist/cli/index.js"
  },
  "main": "dist/index.js",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/cli/index.ts src/index.ts --format esm --dts --sourcemap --clean",
    "typecheck": "tsc --noEmit",
    "lint": "npm run typecheck",
    "test": "vitest run --exclude tests/integration.test.ts --exclude tests/e2e-cli-fullflow.real.test.ts --exclude tests/e2e-failures.real.test.ts",
    "test:watch": "vitest",
    "test:e2e:fullflow": "vitest run tests/integration.test.ts",
    "test:e2e:fullflow:real": "vitest run --maxWorkers=1 tests/integration.test.ts tests/e2e-cli-fullflow.real.test.ts",
    "test:e2e:failures:real": "vitest run tests/e2e-failures.real.test.ts",
    "smoke": "node dist/cli/index.js --help && node dist/cli/index.js doctor --matrix",
    "audit:superiority": "node dist/cli/index.js audit superiority --json",
    "secret:scan": "node scripts/secret-scan.mjs",
    "release:gate": "node scripts/release-gate.mjs",
    "release:gate:strict": "node scripts/release-gate.mjs --require-convergence",
    "prepublishOnly": "npm run lint && npm run test && npm run build"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "ajv": "^8.17.1",
    "commander": "^14.0.3",
    "js-yaml": "^4.1.0",
    "yaml": "^2.8.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.7.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}